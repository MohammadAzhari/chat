<div class="container">
  <div class="col-md-3 ml-5">
    <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img
        class="rounded-circle mt-5"
        width="150px"
        src="/images/{{userPic}}"
      /><span class="font-weight-bold">{{userName}}</span></div>
    <h1>change you profile photo</h1>
    <form action="/api/settings" method="post" enctype="multipart/form-data">
      <input type="file" name="image" class="form-control" />
      <button type="submit" class="btn btn-success rounded-pill">upload</button>
    </form>
    <a href="/" class="btn btn-danger rounded-pill">back</a>
  </div>
</div>