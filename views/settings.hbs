<div class="container text-center">
  <div class="col-md-12 justify-content align-items-center">
    <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img
        class="rounded-circle mt-5"
        width="150px"
        src="/images/{{userPic}}"
      /><span class="font-weight-bold">{{userName}}</span></div>
    <h1>change you profile photo <i class="fa-solid fa-camera"></i></h1>
    <form action="/api/settings" method="post" enctype="multipart/form-data">
      <input type="file" name="image" class="form-control myinput" />
      <button
        type="submit"
        class="mt-3 btn btn-success rounded-pill"
      >upload</button>
    </form>
  </div>
</div>